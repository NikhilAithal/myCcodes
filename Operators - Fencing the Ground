#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    // Declare variables to store length and breadth of the ground
    int length, breadth;

    // Input length and breadth
    scanf("%d", &length);
    scanf("%d", &breadth);

    // Calculate the perimeter (required length of the rope)
    int perimeter = 2 * (length + breadth);

    // Calculate the area (required area of the carpet)
    int area = length * breadth;

    // Output the required length and area
    printf("The required length is %d m\n", perimeter);
    printf("The required area of carpet is %d sqm\n", area);

    return 0;
}
